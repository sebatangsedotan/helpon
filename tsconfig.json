{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["ESNext"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["bun-types", "node"],
    "resolveJsonModule": true,
    "outDir": "build",

    /* JavaScript Support */
    "allowJs": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "types",
    "*.js",
    "*.mjs",
    "*.cjs",
    ".eslintrc.cjs",
    "eslint.config.mjs",
    "prisma/**/*",
  ],
  "exclude": ["node_modules/*"]
}
